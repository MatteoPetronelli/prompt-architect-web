---
import Background from '../components/Background.svelte';
import Hero from '../components/Hero.svelte';
import { ClientRouter } from 'astro:transitions';
---

<html lang="fr" class="scroll-smooth">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/png" href="/icon.png" />
		<meta name="viewport" content="width=device-width" />
		<title>Architecte de Prompts</title>
        
        <ClientRouter />
	</head>
	<body class="bg-slate-900 text-white antialiased">
		
        <div class="fixed inset-0 z-0" transition:persist>
            <Background client:load />
        </div>

        <main class="relative z-10">
            <Hero />
            
            <section id="features" class="h-screen flex items-center justify-center bg-slate-900/80 backdrop-blur-sm border-t border-slate-800">
                <h2 class="text-4xl font-bold text-slate-300">La suite du site...</h2>
            </section>
        </main>

	</body>
</html>